{
  "name": "darkdrop",
  "version": "1.0.0",
  "description": "Multi-tenant file storage service",
  "private": true,
  "workspaces": [
    "api",
    "frontend",
    "mcp-server",
    "database"
  ],
  "scripts": {
    "dev:api": "cd api && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:frontend\"",
    "build:frontend": "cd frontend && npm run build",
    "start:api": "cd api && node index.js",
    "start:mcp": "cd mcp-server && node index.js",
    "setup": "npm install && cd api && npm install && cd ../frontend && npm install && cd ../mcp-server && npm install && cd ../database && npm install",
    "db:init": "cd database && node -e \"const Database = require('./index.js'); const db = new Database(); db.initialize().then(() => process.exit(0))\""
  },
  "keywords": [
    "file-storage",
    "multi-tenant",
    "mcp",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "playwright": "^1.58.2",
    "puppeteer": "^24.37.5",
    "vite": "^5.4.21"
  }
}
